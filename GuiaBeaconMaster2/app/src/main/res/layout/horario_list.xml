<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorBlanco"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:id="@+id/idGridlabosis"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/side_nav_bar"
        android:padding="1dp"
        app:columnCount="1"
        app:rowCount="3"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:id="@+id/cardLabosis"
            android:layout_width="398dp"
            android:layout_height="96dp"
            app:cardBackgroundColor="#00FFFFFF">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="112dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/universidad" />

            <TextView
                android:id="@+id/txtNomb"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:background="@drawable/fondo1"
                android:paddingLeft="10dp"
                android:text="Laboratorio Sistemas"
                android:textColor="@color/colorNegro"

                android:textSize="25sp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/verdetalles"
                style="@android:style/Widget.Holo.Light.Button.Small"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp"
                android:onClick="ShowPopup"
                android:text="Ver Detalles" />

            <Button
                android:id="@+id/verimagen"
                style="@android:style/Widget.Holo.Light.Button.Small"

                android:layout_width="113dp"
                android:layout_height="34dp"
                android:layout_marginTop="60dp"

                android:text="Ver Imagen" />

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>